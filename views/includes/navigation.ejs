

<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Main Page</a>
            </li>
            <% if(isLoggedIn){ %>
                <li class="main-header__item">
                    <a class="<%= path === '/profile' ? 'active' : '' %>" href="/profile">Profile</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/addPost' ? 'active' : '' %>" href="/addPost">Add Post</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/search' ? 'active' : '' %>" href="/search">Search</a>
                </li>
            <% } %>
            
        <ul class="main-header__item-list"> 
            <% if(!isLoggedIn){ %>
            <li class="main-header__item">
                <a href="/login" class="<%= path === '/Login' ? 'active' : '' %>">LogIn</a>
            </li>
            <li class="main-header__item">
                <a href="/register" class="<%= path === '/register' ? 'active' : '' %>">Register</a>
            </li>
            <% }else { %>
            <li class="main-header__item">
                <form action="/logOut" method="post">
                    <button type="submit">LogOut</button>
                </form>
            </li>
            <% } %>
        </ul>
    </nav>

    
</header>

